<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoWishList.Views.StoresPage"
             Title="StoresPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
         Text="Gestión de Clientes" FontAttributes="Bold" FontSize="22"
         HorizontalOptions="Center" />

        <Entry x:Name="txtNombre" Placeholder="Nombre del cliente" />
        <Entry x:Name="txtCorreo" Placeholder="Correo electrómico" Keyboard="Email" />
        <Entry x:Name="txtTelefono" Placeholder="Teléfono" Keyboard="Telephone" />

        <Button x:Name="btnAgregarCliente" Text="Agregar Cliente" BackgroundColor="Blue" TextColor="White"
             CornerRadius="15" Clicked="btnAgregarCliente_Clicked" />
        <Label Text="Lista de Clientes" FontAttributes="Bold" Margin="0,10,0,0" />

        <CollectionView x:Name="clientesView" HeightRequest="300" SelectionMode="Single" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border 
                     Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Correo}" FontSize="13" TextColor="Gray"/>
                            <Label Text="{Binding Telefono}" FontSize="13" TextColor="Gray"/>

                            <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                <Button Text="Editar" BackgroundColor="Yellow" 
                                     TextColor="Black" CornerRadius="10" FontSize="12"
                                      CommandParameter="{Binding .}" />
                                <Button Text="Eliminar" BackgroundColor="Red" 
                                     TextColor="White" CornerRadius="10" FontSize="12"
                                      CommandParameter="{Binding .}" />

                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>